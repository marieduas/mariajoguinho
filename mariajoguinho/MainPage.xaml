<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mariajoguinho.MainPage"
             Shell.NavBarIsVisible="False">
     <Grid>
          
         <Image Source="fundo.jpg"
                    Aspect="AspectFill"/>

          <Image x:Name="Pandolino"
                    Source="panda.jpg"
                    Aspect="AspectFit"
                    Margin="70, 0, 35, 0"
                    VerticalOptions="End"/>

          <Frame VerticalOptions="Start"
                    Margin="10,20"
                    BackgroundColor="#7cc204"
                    HeightRequest="200"
                    CornerRadius="20">           

               <Grid>
                    <Grid.RowDefinitions>
                         <RowDefinition Height="*"/>
                         <RowDefinition Height="*"/>
                         <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                         <ColumnDefinition Width="40"/>
                         <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Image 
                         Source="comida.png"
                         Grid.Row="0"
                         Grid.Column="0"/>

                    <Image
                         Source="Agua.jpg"
                         Grid.Row="1"
                         Grid.Column="0"/>

                    <Image
                         Source="brinquedo.png"
                         Grid.Row="2"
                         Grid.Column="0"/>

                    <ProgressBar  x:Name="ProgressoFome"
                                   Progress="0,5"
                                   Grid.Row="0"
                                   Grid.Column="1"/>

                    <ProgressBar  x:Name="ProgressoSede"
                                   Progress="0,5"
                                   Grid.Row="1"
                                   Grid.Column="1"/> 

                    <ProgressBar  x:Name="ProgressoAlegria"
                                   Progress="0,5"
                                   Grid.Row="2"
                                   Grid.Column="1"/>                                       
               </Grid>
          </Frame>
          <Frame HeightRequest="200"
                 HorizontalOptions="End"
                 VerticalOptions="Center">
               <Grid>
                    <Grid.RowDefinitions>
                         <RowDefinition Height="*"/>
                         <RowDefinition Height="*"/>
                         <RowDefinition Height="*"/>
                         <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                     <ImageButton Source="agua.jpg"
                                  Grid.Row="0" 
                                  Clicked="Aumentaagua"/>
                    <ImageButton  Source="comida.png"
                                  Clicked="Aumentacomida" 
                                  Grid.Row="1"/>
                    <ImageButton  Source="brinquedo.png"
                                  Clicked="Aumentaalegria"
                                  Grid.Row="2"/>
                    <ImageButton  Source="seta.png"
                                  Clicked="TrocaPersonagem"  
                                  Grid.Row="3"/>
               </Grid>  
          </Frame>     
     </Grid>
</ContentPage>
